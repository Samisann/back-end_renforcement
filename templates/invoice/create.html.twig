{% extends 'base.html.twig' %}

{% block main %}
    <h1>Créer une facture</h1>

    <form method="POST">

        <label> Titre
            <input type="text" name="title">
        </label>

        <label> Description
            <input type="text" name="description">
        </label>

        <label> Price
            <input type="number" name="price">
        </label>

        <button type="submit">Créer la facture</button>

    </form>

{% endblock %}
